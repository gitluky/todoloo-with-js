<%= form_for([group, task], html: { class: 'form-group', id: 'task-form' }) do |f| %>
    <%= tag.div class: 'mx-auto col-lg-6 mt-3 text-center form-error-messages' %>
  <%= tag.div class: 'form-group' do %>
    Name: <%= f.text_field :name, class: 'form-control' %>
  <% end %>
  <%= tag.div class: 'form-group' do %>
    Description: <%= f.text_area :description, class: 'form-control' %>
  <% end %>
  <%= tag.div class: 'form-group' do %>
    Assign to (optional): <%= f.collection_select(:assigned_to_id, members, :id, :name, include_blank: true, html_options: { class: 'form-control'}) %>
  <% end %>
  <%=f.submit 'Submit', class: 'btn btn-primary', data:  {disable_with: false }%>
  <%= tag.a 'Cancel', href: '#', class: 'btn btn-danger', id: 'cancel_task_form' %>
<% end %>
