<%= tag.div class: 'text-center', id: 'group_show', data: { groupId: @group.id } do %>
  <%= tag.h3 flash[:message], class: 'mt-3' %>
  <%= tag.ul class: "nav nav-pills justify-content-center mt-3 mb-2" do %>
    <% if current_user.is_admin?(@group) %>
      <%= link_to 'Edit Group', edit_group_path(@group), class: 'nav-item nav-link btn btn-outline-primary mr-2' %><br />
      <%= link_to 'Delete Group', group_path(@group), method: 'delete', class: 'nav-item nav-link btn btn-outline-danger', data: { confirm: 'Are you sure?' }%><br />
    <% end %>
  <% end %>
  <%= display_banner(@group) %><br />
  <%= tag.div class: 'container' do %>
    <%= tag.h1 @group.name, class: 'mt-3 mb-n2' %><br />
    <%= tag.hr class: 'mt-n1' %>
    <%= tag.p @group.description, class: 'mt-1 mb-n3' %><br />
    <%= tag.hr %>
  <% end %>
<% end %>

<%= tag.ul class: "nav nav-pills justify-content-center ml-5 mr-n5" do %>
  <%= link_to 'Post an Announcement', new_group_announcement_path(@group), class: 'nav-item nav-link btn btn-outline-primary mr-2', id: 'post-announcement-button' %>
  <%= link_to 'Send an Invitation', new_group_invitation_path(@group), class: 'nav-item nav-link btn btn-outline-primary mr-2', id: 'send-invitation-button' %>
  <%= link_to 'Create Task', '#', class: 'nav-item nav-link btn btn-outline-primary mr-2',  id: 'create-task-button' %>
<% end %>

<%= tag.div class: 'mt-3 mx-auto col-lg-6 group-form-frame' %>




<%= tag.div class: 'container-fluid' do %>
  <%= tag.hr %>
  <%= tag.div class: 'row text-center mt-3' do %>
    <%= tag.div class: 'col-md-2' do %>

    <% end %>
    <%= tag.div class: 'col-lg-3' do %>
      Announcements
    <% end %>
    <%= tag.div class: 'col-lg-2' do %>
      <%= tag.div  id: 'available-tasks-title' %>
    <% end %>
    <%= tag.div class: 'col-lg-2' do %>
      <%= tag.div id: 'assigned-tasks-title' %>
    <% end %>
    <%= tag.div class: 'col-lg-2' do %>
      <%= tag.div id: 'completed-tasks-title'%>
    <% end %>
  <% end %>

  <%= tag.div class: 'row text-center mt-1' do %>
    <%= tag.div class:'col-lg-2', id: 'member-list' do %>
      <%= tag.div class: 'text-right' do %>

        <%= tag.h6 'Admins:' %>
        <%= tag.div id: 'admins' %>

        <%= tag.h6 'Members:', class: 'mt-4' %>
        <%= tag.div id: 'members' %>

        <%= tag.div id: 'invitations' %>

      <% end %>
    <% end %>


  <%= tag.div class:'col-lg-3 text-left group-show-frame', id: 'announcements' %>

  <%= tag.div class:'col-lg-2' do %>

    <%= tag.div class: 'group-show-frame px-1', id: 'available-tasks' %>
  <% end %>
  <%= tag.div class:'col-lg-2' do %>

    <%= tag.div class: 'group-show-frame px-1', id: 'assigned-tasks' %>
  <% end %>
  <%= tag.div class:'col-lg-2' do %>

    <%= tag.div class: 'group-show-frame px-1', id: 'completed-tasks' %>
  <% end %>




  <% end %>
<% end %>
