<%= tag.div class: 'row justify-content-center border border-light rounded py-3' do %>
  <%= form_for([group, invitation]) do |f| %>
    <%= f.text_field :recipient_email, list: "user_names" %>
     <datalist id="user_names">
       <% users.each do |user| %>
         <option value="<%= user.email%>"><br />
           <%= user.name %>
       <% end %>
     </datalist>
    <%= f.submit 'Send Invite', class: 'btn btn-primary' %>
    <%= tag.a 'Cancel', href: '#', class: 'btn btn-danger', id: 'cancel_invitation' %>
  <% end %>
<% end %>
