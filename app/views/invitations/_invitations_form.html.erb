<%= tag.div class: 'row justify-content-center border border-light rounded py-3' do %>
  <%= form_for([group, invitation]) do |f| %>
    <%= tag.div class: 'mx-auto col-lg-6 mb-3 text-center form-error-messages' %>
    <%= f.text_field :recipient_email, list: "user_names" %>
     <datalist id="user_names">
       <% users.each do |user| %>
         <option value="<%= user.email%>"><br />
           <%= user.name %>
       <% end %>
     </datalist>
    <%= f.submit 'Send Invite', class: 'btn btn-primary', data: { disable_with: false } %>
    <%= tag.a 'Cancel', href: '#', class: 'btn btn-danger cancel' %>
  <% end %>
<% end %>
